<div class="about">
  <h2>Entre em contato para saber mais!</h2>
  <%# --- %>
  <div class="form-section">
    <%= simple_form_for @page, html: { class: "contact-form"} do |f| %>
      <%= f.input :name, label: false, placeholder: "Nome" %>
      <%= f.input :email, label: false, placeholder: "Email" %>
      <%= f.input :phone, required: false, label: false, placeholder: "Telefone" %>
      <%= f.input :message, label: false, placeholder: "Assunto" %>
      <%= f.input :text, as: :text, input_html: {rows: 4, cols: 10}, label: false, placeholder: "Escreva sua mensagem" %>
      <%# <%= f.submit value: t('.send'), class: 'btn btn-dark float-right' %>
      <%# <%= f.button :submit, 'Enviar', class: "send_button" %>
      <%= f.button :submit, "Enviar", class: "submit_button" %>
    <% end %>
    <%# --- %>
    <div class="mapa">
      <%= link_to "https://goo.gl/maps/YVHzcVz7HzhFpRNo9", :target => "_blank" do %>
        <%= image_tag ('endereco.png') %>
      <% end %>
    </div>
    <%# --- %>
    <div class="cartoes">
      <h4>Aceitamos os cart√µes:</h4>
      <%= image_tag("cards.jpeg", size: "300x400") %>
    </div>
  </div>
</div>
